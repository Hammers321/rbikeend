

%table.table.table-hover
  %thead
    %tr
      %th Quantity
      %th Product
      %th Price

  -@cart.items.each do |item|
    %tr
      %td=item.quantity
      %td
        
        =link_to item.product.name, item.product
      %td=item.total_price
  %tfoot
    %tr
      %td.text-right
        %strong
          Total:
          =@cart.total_price

%p=link_to "Checkout", checkout_cart_path, class: "btn btn-primary"
